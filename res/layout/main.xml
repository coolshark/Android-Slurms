        <TextView android:paddingLeft="2dp" android:text="Glurmo" android:textSize="10dp" android:paddingRight="2dp" android:id="@+id/Player2Name" android:background="#000000" android:layout_alignRight="@+id/Player2Icon" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:textStyle="bold" android:layout_height="wrap_content" android:textColor="#0095FC" android:layout_alignTop="@+id/Player2Icon" android:layout_marginRight="15dp"></TextView>
        <TextView android:layout_alignParentLeft="true" android:gravity="center_vertical|center_horizontal" android:layout_marginLeft="10dp" android:text="60" android:textSize="20dp" android:digits="2" android:id="@+id/CountDown" android:background="#000000" android:layout_width="30dp" android:layout_marginBottom="4dp" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="30dp" android:layout_alignParentBottom="true"></TextView>
