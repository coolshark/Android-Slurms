        <Button android:layout_height="35dp" android:layout_alignParentBottom="true" android:layout_marginBottom="5dp" android:layout_toLeftOf="@+id/Fire" android:id="@+id/Move" android:layout_width="45dp" android:text="&lt; &gt;"></Button>
    </RelativeLayout>
