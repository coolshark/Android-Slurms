    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_width="100dp" android:layout_height="12dp" android:layout_alignTop="@+id/Player2Icon" android:layout_alignLeft="@+id/Player2Icon" android:layout_marginLeft="15dp" android:id="@+id/Player1Life" style="?android:attr/progressBarStyleHorizontal"></ProgressBar>
